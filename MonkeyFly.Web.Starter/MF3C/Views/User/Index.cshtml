@{
    ViewBag.Title = "用户管理";
    Layout = "~/Views/Shared/_LayoutLang.cshtml";
}

@*用户列表*@
<div id="tb_list" class="J-main">
    <div id="container" class="J-toolbar"></div>
    <div style="height:calc(100% - 47.5px);">
        <div style="display: inline-block;width: 20%;float:left;height:calc(100% - 20px);padding: 5px 0 0 5px;">
            <div style="padding: 4px;font-weight: 600;border: 1px solid #e4eaec;">
                <span data-meaning="Organization">Organization</span>
            </div>
            <div style="border-left:1px solid #e4eaec;border-right:1px solid #e4eaec;border-bottom:1px solid #e4eaec;height:100%;">
                <div id="jstree1"></div>
            </div>
        </div>
        <div style="display: inline-block;width: 80%;">
            <div style="padding: 5px 5px 0;">
                <table id="userTable" data-toggle="true" data-mobile-responsive="true"></table>
            </div>
        </div>
    </div>
</div>

@*编辑*@
<div class="modal inmodal" id="EditDialog" tabindex="-1" role="dialog" aria-hidden="true">

    <div class="modal-dialog" style="width:700px;">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header" style="padding:16px !important">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">关闭</span>
                </button>
                <h6 class="modal-title" data-meaning="EditUser">Edit User</h6>
            </div>
            <div class="ibox float-e-margins" style="margin-bottom: 0px !important;">
                <div class="ibox-content">
                    <form class="form-horizontal m-t" id="commentForm">
                        <div class="form-group">

                            <label class="col-sm-2 control-label"><span style="color:red;">*</span><span data-meaning="AccountNo">Account No</span></label>
                            <div class="col-sm-10">
                                <input id="editAccount" name="Account" type="text" class="form-control" required="" aria-required="true" readonly>
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"><span style="color:red;">*</span><span data-meaning="UserName">User Name</span></label>
                            <div class="col-sm-6">
                                <input id="editUserName" name="UserName" type="text" class="form-control" required="" aria-required="true" readonly>
                            </div>
                            <label class="col-sm-2 control-label"><span data-meaning="Isenable">Is enable</span></label>
                            <div class="col-sm-2">
                                <select class="form-control" name="Status" id="editStatus" data-bind="options:StatusArray,optionsValue:'value',optionsText:'text',value:Status">
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label"><span data-meaning="DescribeDescription">Describe Dept.</span></label>
                            <div class="col-sm-10">
                                <textarea id="editComments" name="Comments" class="form-control" required="" aria-required="true" data-bind="value:Comments" maxlength="120"></textarea>
                            </div>
                        </div>
                    </form>
                    <span id="editTip" style="color:red;"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal" data-meaning="Close">Close</button>
                <button type="button" class="btn btn-success" id="editSave" data-meaning="Save" onclick="model.editSave()">Save</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <link href="~/Content/css/plugins/jsTree/style.min.css" rel="stylesheet">
    <link href="~/Content/css/plugins/iCheck/blue.css" rel="stylesheet">
    <script src="~/Content/js/hplus/plugins/iCheck/icheck.min.js"></script>
    <script src="~/Content/js/knockout/knockout-3.0.0.js" type="text/javascript"></script>
    <script src="~/Content/js/current/pagination.js" type="text/javascript"></script>
    <script src="~/Content/js/current/Rander.js" type="text/javascript"></script>
    <script src="~/Content/js/current/Checker.js" type="text/javascript"></script>
    <script src="~/ViewModels/MFC/User.js" type="text/javascript"></script>
}