@{
    ViewBag.Title = "编辑权限";
    ViewBag.LanguageURL = "";
    ViewBag.TipURL = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*权限列表*@
<div id="tb_list" class="J-main">
    <div id="container" class="J-toolbar">
        <div>
            <button class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="left" title="返回" onclick="model.backClick()"><i class="fa icon-arrow-left"></i>&nbsp; 返回</button>
            <button class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="left" title="刷新" onclick="model.refreshClick()"><i class="fa icon-arrow_refresh"></i>&nbsp; 刷新</button>
            <button class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="left" title="保存" onclick="model.saveClick()"><i class="fa icon-save"></i>&nbsp; 保存</button>
        </div>
        <span class="J-barspan">编辑权限-角色名：@ViewBag.Name</span>
    </div>
    <div class="J-content">
        <div class="tab-content  tabs-container">
            <ul class="nav nav-tabs" style="border-bottom:none;">
                <li class="active">
                    <a data-toggle="tab" href="#tab-1" aria-expanded="true">菜单权限</a>
                </li>
                <li class="">
                    <a data-toggle="tab" href="#tab-2" aria-expanded="false">按钮权限</a>
                </li>
                <li class="">
                    <a data-toggle="tab" href="#tab-3" aria-expanded="false">操作权限</a>
                </li>
            </ul>

            <div id="tab-1" class="tab-pane active">
                <table id="menuTable" data-toggle="true" data-mobile-responsive="true"></table>
            </div>

            <div id="tab-2" class="tab-pane ">
                <table id="buttonTable" data-toggle="true" data-mobile-responsive="true"></table>
            </div>

            <div id="tab-3" class="tab-pane">
                <table id="actionTable" data-toggle="true" data-mobile-responsive="true"></table>
            </div>
        </div>
     </div>
</div>

@section scripts{
    <link href="~/Content/css/plugins/iCheck/blue.css" rel="stylesheet">
    <link href="~/Content/css/plugins/bootstrap-table/bootstrap-table-fixed-columns.css" rel="stylesheet" />
    <script>
        var ID = '@ViewBag.ID';
        var Name = '@ViewBag.Name';
    </script>
    <script src="~/Content/js/hplus/plugins/iCheck/icheck.min.js" type="text/javascript"></script>
    <script src="~/Content/js/hplus/plugins/bootstrap-table/bootstrap-table-fixed-columns.js"></script>
    <script src="~/Content/js/knockout/knockout-3.0.0.js" type="text/javascript"></script>
    <script src="~/ViewModels/MFC/EditPermission.js" type="text/javascript"></script>
}
