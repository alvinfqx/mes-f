@{
    ViewBag.Title = "日志管理";
    ViewBag.LanguageURL = "/Data/Language/MES-MFC/Log/Log";
    ViewBag.TipURL = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*日志管理*@
<div id="tb_list" class="J-main">
    <div id="container" class="J-toolbar"></div>
    <div class="J-search">
        <input placeholder="start date" data-meaning="start date" class="layer-date search-input" id="start" data-bind="value:form.Start">
        <input placeholder="end date" data-meaning="end date" class="layer-date search-input" id="end" data-bind="value:form.End">
    </div>
    <div class="J-content">
        <div class="tab-content  tabs-container">
            <ul class="nav nav-tabs" id="liTab" style="border-bottom:none;">
                <li class="active">
                    <a data-toggle="tab" href="#tab-1" aria-expanded="true" data-meaning="Login Log">Login Log</a>
                </li>
                <li>
                    <a data-toggle="tab" href="#tab-2" aria-expanded="false" data-meaning="Operation Log">Operation Log</a>
                </li>
                <li>
                    <a data-toggle="tab" href="#tab-3" aria-expanded="false" data-meaning="System Log">System Log</a>
                </li>
            </ul>
            <div id="tab-1" class="tab-pane active">
                <div>
                    <table id="logTable"></table>
                </div> 
                <div id="pagelog" class="datagrid-pager page"></div>
            </div>
            <div id="tab-2" class="tab-pane ">
                <div>
                    <table id="actionTable"></table>
                </div>                    
                <div id="pageaction" class="datagrid-pager page"></div>
                </div>
            <div id="tab-3" class="tab-pane ">
                <table id="systemTable" data-toggle="true" data-mobile-responsive="true"></table>
            </div>
        </div>
    </div>
</div>

@*查看*@
<div class="modal inmodal" id="ViewDialog" tabindex="-1" role="dialog" aria-hidden="true">
    <style>
        .ui-state-highlight, .ui-widget-content .ui-state-highlight, .ui-widget-header .ui-state-highlight {
            border: 1px solid red;
        }
    </style>
    <div class="modal-dialog" style="width:800px;">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header" style="padding:16px !important">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only" data-meaning="Close">Close</span>
                </button>
                <h6 class="modal-title" data-meaning="Log">Log</h6>
            </div>
            <div class="modal-body" style="height:230px;overflow:auto;">
                <div id="view"></div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/js/hplus/plugins/layer/laydate/laydate.js"></script>
    <script src="~/Content/js/knockout/knockout-3.0.0.js" type="text/javascript"></script>
    <script src="~/Content/js/current/pagination.js" type="text/javascript"></script>
    <script src="~/Content/js/current/Rander.js" type="text/javascript"></script>
    <script src="~/Content/js/current/Checker.js" type="text/javascript"></script>
    <script src="~/Content/js/current/table.js" type="text/javascript"></script>
    <script src="~/ViewModels/MFC/Log.js" type="text/javascript" charset="gb2312"></script>   

}
