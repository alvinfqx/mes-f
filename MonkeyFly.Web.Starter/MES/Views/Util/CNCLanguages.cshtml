@{
    ViewBag.Title = "三语系的通用界面";
    Layout = "~/Views/Shared/_LayoutLang.cshtml";
}

@*通用语系列表*@
<div id="tb_list" class="J-main">
    <div id="container" class="J-toolbar">
        <button class="btn btn-success btn-sm" onclick="model.backClick()"><i class="fa icon-arrow-left"></i> <span data-meaning="Cancel">Cancel</span></button>
        <button class="btn btn-success btn-sm" onclick="model.addClick()"><i class="fa icon-add"></i> <span data-meaning="New">New</span></button>
        <button class="btn btn-success btn-sm" onclick="model.editClick()"><i class="fa icon-edit"></i> <span data-meaning="Change"> Edit</span></button>
        <button class="btn btn-success btn-sm" onclick="model.deleteClick()"><i class="fa icon-delete"></i> <span data-meaning="Deletion">Deletion</span></button>
        <button class="btn btn-success btn-sm" onclick="model.comfirmClick()"><i class="fa icon-save"></i> <span data-meaning="Comfirm">Comfirm</span></button>
    </div>
    <div class="J-search"></div>
    <div class="J-content">
        <table id="LanguagesTable"></table>
    </div>
</div>

@section scripts{
    <style>
        .mf-table-wrapper {
            overflow-x: auto;
        }

        .fix-table, .fix-head {
            width: 120%;
        }
    </style>
    <link href="~/Content/css/plugins/iCheck/blue.css" rel="stylesheet">
    <script src="~/Content/js/hplus/plugins/iCheck/icheck.min.js"></script>
    <script src="~/Content/js/current/Rander.js" type="text/javascript"></script>
    <script src="~/Content/js/current/Checker.js" type="text/javascript"></script>
    <script src="~/ViewModels/MES/Util/CNCLanguages.js" type="text/javascript"></script>
}