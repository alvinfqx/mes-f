
@{
    ViewBag.Title = "SFC00005";
    Layout = "~/Views/Shared/_LayoutLang.cshtml";
}

@*RUNCARD發派處理*@
<div id="tb_list" class="J-main">
    <div id="container" class="J-toolbar">
    </div>
    <div class="J-search">
        <span data-meaning="StartWorkCenter">Start Work Center</span>
        <input type="text" class="search-input" style="width: 120px;" id="SWC" />
        &nbsp;
        <span data-meaning="EndWorkCenter">End Work Center</span>
        <input type="text" class="search-input" style="width: 120px;" id="EWC" />
        &nbsp;&nbsp;&nbsp;&nbsp;
        <span data-meaning="StartOrderNumber">Start Order Number</span>
        <input type="text" class="search-input" style="width: 120px;" id="SON" />
        &nbsp;
        <span data-meaning="EndOrderNumber">End Order Number</span>
        <input type="text" class="search-input" style="width: 120px;" id="EON" />
        <br/>
        <span data-meaning="IsDisplayed">Whether to display distribution data</span>
        <select id="IsAssignment" style="width: 40px;margin-top:5px;">
            <option></option>
            <option value="1" data-meaning="yes">yes</option>
            <option value="0" data-meaning="no">no</option>
        </select>
        </div>
    <div class="J-content">
        <div id="Table">
            <table id="RCDPTable"></table>
        </div>
    </div>
    <div class="datagrid-pager page" id="paginagionBar"></div>
</div>

@*资源明细弹窗*@
<div class="modal inmodal" id="SourceDetailDialog" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" style="width:850px;">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header" style="padding:16px !important">
                <button id="close" type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only" data-meaning="Close">Close</span>
                </button>
                <h6 class="modal-title" data-meaning="SourceDetail">SourceDetail</h6>
            </div>
            <div class="J-search">
                <span data-meaning="EquipmentCode" style="margin:5px 5px 8px 10px; width:40px;">Equipment Code</span>
                <input id="EquipmentCode" type="text" class="search-input" style="width: 160px; margin:3px 2px 5px 0;" autocomplete="off"/>
                <button class="btn btn-success btn-sm" type="button" onclick="model.EquipmentCodeSearch()" id="Find" data-meaning="Search" value="Search">Search</button>
            </div>
            <div style="margin:5px 10px 5px 10px;">
                <div id="SClTable">
                    <table id="SourceDetailTable"></table>
                </div>
                <div class="datagrid-pager page" id="SourceDetailpaginagionBar" style="margin:0 15px;"></div>
            </div>
            <div class="modal-footer" style="text-align:right;">
                <button class="btn btn-success btn-sm" type="button" data-meaning="Cancel" value="Cancel" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <style>
        .mf-table-wrapper {
            overflow-x: auto;
        }

        #Table .fix-table,#Table .fix-head {
            width: 240%;
        }
        #SClTable .fix-table,#SClTable .fix-head {
            width: 100%;
        }

    </style>
    <script src="~/Content/js/knockout/knockout-3.0.0.js" type="text/javascript"></script>
    <script src="~/Content/js/current/pagination.js" type="text/javascript"></script>
    <script src="~/Content/js/current/Rander.js" type="text/javascript"></script>
    <script src="~/Content/js/current/Checker.js" type="text/javascript"></script>
    <script src="~/ViewModels/MES/IntelligentManufacturing/SFC00005.js" type="text/javascript"></script>
}

