
@{
    ViewBag.Title = "SFC00021";
    Layout = "~/Views/Shared/_LayoutLang.cshtml";
}

@* 制程生产计划差异 *@
<div id="tb_list" class="J-main">
    <div id="container" class="J-toolbar"></div>
    <div class="J-search" >
        <div class="row">
            <div class="col-md-3">
                <lable data-meaning="StartProcessNo">Start Process No</lable>
                <input type="text" class="search-input" id="StartProcessNo" style="width: 120px;" />
                <input type="text" class="search-input" id="StartProcessNoID" style="display:none;" />
                <button type="button" class="btn btn-success btn-xs" onclick="model.StartProcessNo('#StartProcessNo', '#StartSequence')" style="margin-right:4px;"><span class="fa fa-desktop"></span></button>
            </div>
            <div class="col-md-3">
                <lable data-meaning="EndProcessNo">End  Process No</lable>
                <input type="text" class="search-input" id="EndProcessNo" style="width: 120px;" />
                <input type="text" class="search-input" id="EndProcessNoID" style="display:none;" />
                <button type="button" class="btn btn-success btn-xs" onclick="model.StartProcessNo('#EndProcessNo', '#EndSequence')" style="margin-right:4px;"><span class="fa fa-desktop"></span></button>
            </div>
            <div class="col-md-3">
                <lable data-meaning="StartProcessDate" style="margin:0 5px;">Start Process Date</lable>
                <input id="SStartDate" type="text" class="search-input td_left" readonly="readonly" style="width:100px;" autocomplete="off" />
            </div>
            <div class="col-md-3">
                <lable data-meaning="EndProcessDate" style="margin:0 5px;">End Process Date</lable>
                <input id="EStartDate" type="text" class="search-input td_left"readonly="readonly" style="width:100px;" autocomplete="off" />
            </div>
        </div>             
       </div>
    <div class="J-content" id="table-body">
        <table id="SFC00021Table"></table>
    </div>
    <div class="datagrid-pager page" id="paginagionBar21"></div>
</div>

@* 製程代號弹窗 *@
<div class="modal inmodal" id="CodeDialog" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" style="width:625px;">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header" style="padding:16px !important">
                <button id="close" type="button" class="close" data-dismiss="modal" onclick="model.CleanClick()">
                    <span aria-hidden="true">&times;</span><span class="sr-only" data-meaning="Close">Close</span>
                </button>
                <h6 class="modal-title" data-meaning="WorkCenter">Work Center</h6>
            </div>
            <div class="J-search">
                <span data-meaning="ProcessNo" style="margin:5px 5px 8px 10px; width:60px;">Process No</span>
                <input id="ProcessNoSs" type="text" class="search-input" style="width: 160px; margin:5px 5px 8px 0;" autocomplete="off" />
                <span data-meaning="ProcessDescription" style="margin:5px 5px 8px 10px; width:60px;">Process Description</span>
                <input id="ProcessDescription" type="text" class="search-input" style="width: 160px; margin:5px 5px 8px 0;" autocomplete="off" />
                <button class="btn btn-success btn-sm" type="button" onclick="model.DialogProcessSearch()" data-meaning="Search" value="Search">Search</button>
            </div>
            <div id="table-bodyMono" style="margin:0 15px;">
                <table id="ProcessNoTable"></table>
            </div>
            <div class="datagrid-pager page" id="paginagionMoNoBar" style="margin:0 15px;"></div>
            <div class="modal-footer" style="text-align:right;">
                <button class="btn btn-success btn-sm" type="button" id="cancel" data-dismiss="modal"  data-meaning="Cancel" value="Cancel" onclick="model.CleanClick()">Cancel</button>
                <button class="btn btn-success btn-sm" type="button" id="ProcessCommit" data-meaning="Comfirm" value="Comfirm">Commit</button>
            </div>
        </div>
    </div>
</div>




