
@{
    ViewBag.Title = "SFC00018Print";
    Layout = "~/Views/Shared/_LayoutLang.cshtml";
}

@*打印界面*@
<div id="Brandtb_list" class="J-main">
    <div id="container" class="J-toolbar">
        <button class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="left" onclick="model.backClick()"><i class="fa icon-arrow-left"></i> <span data-meaning="Back"> Back</span></button>
        <button class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="left" onclick="model.printClick()"><i class="fa icon-add"></i> <span data-meaning="Print"> Print</span></button>
    </div>
    <div class="J-content">
        <div>
            <div class="title1"></div>
            @*<div class="title2"></div>*@
            <div id="items"></div>
        </div>
        <div id="gridlist" class="wrapper" style="width: 100%; height: 100%; margin-top: 5px;">
            <table id="PrintTable" data-toggle="true" data-mobile-responsive="true"></table>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Content/js/knockout/knockout-3.0.0.js" type="text/javascript"></script>
    <script src="~/Content/js/bootstrap-datepicker/locales/bootstrap-datepicker.zh-CN.min.js"></script>
    <script src="~/Content/js/bootstrap-datepicker/locales/bootstrap-datepicker.zh-TW.min.js"></script>
    <script src="~/Content/js/current/pagination.js" type="text/javascript"></script>
    <script src="~/Content/js/current/Rander.js" type="text/javascript"></script>
    <script src="~/Content/js/current/Checker.js" type="text/javascript"></script>
    <script src="~/ViewModels/MES/IntelligentManufacturing/SFC00018Print.js" type="text/javascript"></script>
    <style>
        .mf-table-wrapper {
            overflow-x: auto;
        }

        .mf-layer {
            box-sizing: content-box;
            height: 100%;
        }

            .mf-layer .col-sm-12 {
                box-sizing: content-box;
                height: 100%;
                padding-right: 20px;
            }


            .mf-layer .ibox {
                box-sizing: content-box;
                height: calc(100% - 25px);
            }

            .mf-layer .ibox-content {
                height: calc(100% - 35px);
                overflow-y: auto;
            }

        .col-md-2 {
            box-sizing: content-box;
            height: 100%;
            padding-right: 0px !important;
            padding-left: 0px !important;
        }

        .title1 {
            text-align: center;
            font-size: 2em;
            padding-bottom: 5px;
        }

        .title2 {
            text-align: center;
            font-size: 1.5em;
            padding-bottom: 5px;
        }

        .title3 {
            text-align: center;
            display: inline-block;
            width: 33%;
        }

        .contentBorder {
            border-color: #fff;
        }

        .mf-head-table tr {
            border-top: 1px solid #000 !important;
            border-bottom: 0px solid white !important;
        }

        th {
            border-color: #000 !important;
        }

        td {
            border-color: #000 !important;
        }

        .fixed-table-container {
            border: 1px solid #000;
        }
    </style>
}


