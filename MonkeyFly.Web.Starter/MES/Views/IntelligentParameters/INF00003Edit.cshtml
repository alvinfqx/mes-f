@{
    ViewBag.Title = "编辑员工信息";
    Layout = "~/Views/Shared/_LayoutLang.cshtml";
}

<div id="tb_list" class="J-main">
    <div id="container" class="J-toolbar" style="text-align:right;">
        <table>
            <tr>
                <td width="5px;"></td>
                <td style="text-align:left;  width:59%;">
                    <button class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="left" onclick="model.backClick()"><i class="fa icon-arrow-left"></i>&nbsp;<span data-meaning="Cancel"> Cancel</span></button>
                    <button class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="left" onclick="model.refreshClick()"><i class="fa icon-arrow_refresh"></i><span data-meaning="Refresh"> Refresh</span></button>
                    <button id="btn_Save" class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="left" onclick="model.saveClick()"><i class="fa icon-save"></i><span data-meaning="Save"> Save</span></button>
                </td>
                <td style="text-align:right; width:40%; height:28px;"></td> 
            </tr>
        </table>
    </div>
    <div class="J-search">
    </div>
    <div class="J-content" id="table-body">
        <table id="table">
            <tr style="line-height:35px;">
                <td colspan="3" style="text-align:right;">
                    <span data-meaning="EditEmployee" style="font-size:16px; text-align:center; font-weight:600;">Edit Employee</span>
                </td>
                <td class="td_left"></td>
            </tr>
            <tr>
                <td class="td_right"><span style="color:red;">* </span><spnan data-meaning="AccountNo">Account No.</spnan></td>
                <td class="td_left"><input class="search-input" maxlength="20" style="width:300px;" id="Account" data-bind="value:Account" autocomplete="off" disabled="disabled" /></td>
                <td class="td_right"><spnan data-meaning="WorkNumber">Work Number</spnan></td>
                <td class="td_left"><input class="search-input" maxlength="20" style="width:300px;" id="Emplno" data-bind="value:Emplno" autocomplete="off" /></td>
            </tr>
            <tr>
                <td class="td_right"><span style="color:red;">* </span><spnan data-meaning="Name">Name</spnan></td>
                <td class="td_left"><input class="search-input" maxlength="20" style="width:300px;" id="UserName" data-bind="value:UserName" autocomplete="off" /></td>
                <td class="td_right" data-meaning="EnglishName">English Name</td>
                <td class="td_left"><input class="search-input" style="width:300px;" maxlength="60" id="EnglishName" data-bind="value:EnglishName" autocomplete="off" /></td>
            </tr>
            <tr>
                <td class="td_right" data-meaning="Sex">Sex</td>
                <td class="td_left"><select class="search-select" style="width:300px;" id="Sex" data-bind="options:SexArray,optionsValue:'value',optionsText:'text',value:Sex" autocomplete="off"></select></td>
                <td class="td_right" data-meaning="Birthday">Birthday</td>
                <td class="td_left"><input class="search-input" id="Brith" data-bind="value:Brith" autocomplete="off" /></td>
            </tr>
            <tr>
                <td class="td_right"><spnan data-meaning="IDcard">ID card</spnan></td>
                <td class="td_left"><input class="search-input" maxlength="18" style="width:300px;" id="IDcard" data-bind="value:IDcard" autocomplete="off" /></td>
                <td class="td_right"><spnan data-meaning="Phone">Phone</spnan></td>
                <td class="td_left"><input class="search-input" style="width:300px;" maxlength="11" id="Mobile" data-bind="value:Mobile" autocomplete="off" /></td>
            </tr>
            <tr>
                <td class="td_right" data-meaning="Email">E-mail</td>
                <td class="td_left"><input class="search-input" maxlength="60" style="width:300px;" id="Email" data-bind="value:Email" /></td>
                <td class="td_right" data-meaning="Status">Status</td>
                <td class="td_left"><select class="search-select" style="width:300px;" id="Status" data-bind="options:StatusArray,optionsValue:'value',optionsText:'text',value:Status" autocomplete="off"></select></td>
            </tr>
            <tr>
                <td class="td_right" data-meaning="JobType">Job Type</td>
                <td class="td_left"><select class="search-select" style="width:300px;" id="Sex" data-bind="options:TypeArray,optionsValue:'value',optionsText:'text',value:Type" autocomplete="off"></select></td>
                <td class="td_right"><spnan data-meaning="EntryTime">Entry Time</spnan></td>
                <td class="td_left"><input class="search-input" id="InTime" data-bind="value:InTime" /></td>
            </tr>
            <tr>
                <td class="td_right"><spnan data-meaning="CardNumber">CardNumber</spnan></td>
                <td class="td_left"><input class="search-input" maxlength="50" style="width:300px;" id="CardCode" data-bind="value:CardCode" autocomplete="off" /></td>
                <td class="td_right"><spnan data-meaning="Department">Department</spnan></td>
                <td class="td_left"><select class="search-select" style="width:300px;" id="Sex" data-bind="options:DepartmentArray,optionsValue:'value',optionsText:'text',value:Department,optionsCaption:PleaseChoose" autocomplete="off"></select></td>
            </tr>
            <tr>
                <td class="td_right" data-meaning="Remark">Remark</td>
                <td colspan="3"><input class="search-input" style="width:720px;" maxlength="120" id="Comments" data-bind="value:Comments" autocomplete="off" /></td>
            </tr>
        </table>
    </div>
</div>

@section scripts{
    <style>
        .td_right {
            text-align: right;
            padding-right: 5px;
            width: 90px;
            font-size: 12px;
            font-weight: bold;
        }

        .td_left {
            width: 310px;
        }

        #table tr {
            line-height: 53px;
        }

        select {
            height: 25.5px;
            font-size: 12px;
            color: #555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
        }
    </style>
    <link href="~/Content/css/bootstrap.min14ed.css?v=3.3.6" rel="stylesheet">
