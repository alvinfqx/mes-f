
@{
    ViewBag.Title = "INF00003PersonalAuthority";
    Layout = "~/Views/Shared/_LayoutLang.cshtml";
}

@*个人权限列表*@
<div id="tb_list" class="J-main">
    <div id="container" class="J-toolbar">
        <div style="display: inline-block;width: 60%;">
            <button class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="left" onclick="model.backClick()"><i class="fa icon-arrow-left"></i> <span data-meaning="Back">Back</span></button>
            <button class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="left" onclick="model.refreshClick()"><i class="fa icon-arrow_refresh"></i> <span data-meaning="Refresh">Refresh</span></button>
            <button class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="left" onclick="model.saveClick()"><i class="fa icon-save"></i> <span data-meaning="Save">Save</span></button>
        </div>
        <div style="display: inline-block;width: 39%;line-height: 23px;text-align: right;">
            <span data-meaning="Account">Account</span>：
            <span data-bind="text: roleName"></span>
        </div>
    </div>
    <div class="J-content">
        <div class="tab-content  tabs-container">
            <ul id="liTab" class="nav nav-tabs" style="border-bottom:none;">
                <li class="active">
                    <a data-toggle="tab" data-id="#tab-1"><span data-meaning="Menus">Menus</span></a>
                </li>
                <li class="">
                    <a data-toggle="tab" data-id="#tab-2"><span data-meaning="Buttons">Buttons</span></a>
                </li>
                <li class="">
                    <a data-toggle="tab" data-id="#tab-3"><span data-meaning="Actions">Actions</span></a>
                </li>
                <li class="">
                    <a data-toggle="tab" data-id="#tab-4"><span data-meaning="WorkCenter">Work Center</span></a>
                </li>
            </ul>

            <div id="tab-1" class="tab-pane active">
                <table id="menuTable"></table>
            </div>
            <div id="tab-2" class="tab-pane ">
                <table id="buttonTable"></table>
            </div>
            <div id="tab-3" class="tab-pane">
                <table id="actionTable"></table>
            </div>
            <div id="tab-4" class="tab-pane">
                <table id="workCenterTable"></table>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <style>
        #tab-2 .mf-table-wrapper, #tab-3 .mf-table-wrapper {
            overflow-x: auto;
        }
    </style>
    <script src="~/Content/js/current/pagination.js" type="text/javascript"></script>
    <script src="~/Content/js/current/Rander.js" type="text/javascript"></script>
    <script src="~/Content/js/current/Checker.js" type="text/javascript"></script>
    <script src="~/ViewModels/MES/IntelligentParameters/INF00003PersonalAuthority.js" type="text/javascript"></script>
}
