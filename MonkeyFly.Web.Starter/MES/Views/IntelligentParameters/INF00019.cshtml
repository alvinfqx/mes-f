@{
    ViewBag.Title = "項目主檔維護";
    ViewBag.LanguageURL = "/Data/Language/MES/IntelligentParameters/INF00019/INF00019";
    ViewBag.TipURL = "/Data/tips/MES/IntelligentParameters/INF00019/INF00019";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@*項目主檔維護*@
<div id="tb_list" class="J-main">
    <div id="container" class="J-toolbar"></div>
    <div class="J-search">
        <input id="projectCode" type="text" class="search-input" placeholder="Project code" data-meaning="projectCode" style="width: 170px;" autocomplete="off" />
    </div>
    <div class="J-content" id="table-body">
        <table id="projectTable" data-toggle="true" data-mobile-responsive="true"></table>
    </div>
    <div class="datagrid-pager page" id="paginationBar"></div>
</div>

@*导入*@
<div class="modal inmodal" id="importDialog" tabindex="-1" role="dialog" aria-hidden="true">

    <div class="modal-dialog" style="width:400px;">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header" style="padding:16px !important">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only" data-meaning="Shut">Shut</span>
                </button>
                <h6 id="importTitle" class="modal-title" data-meaning="Import">Import</h6>
            </div>
            <div class="modal-body">
                <div>
                    <div>
                        <button id="btn_browse" class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="left"><span data-meaning="Browse">Browse</span></button>
                        <input id="File" name="File" type="file" style="opacity:0" />
                    </div>
                    <div style="padding:5px;">
                        <span id="FileName" data-meaning="No file selected">No file selected</span>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal" data-meaning="Close">Close</button>
                <button type="button" class="btn btn-success" id="addFile" data-meaning="Comfirm">Comfirm</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <style>
        .checkbox-cell {
            height: 25.5px;
        }

        #table-body .mf-table-wrapper {
            overflow-x: auto;
        }

        select {
            height: 25.5px;
            font-size: 12px;
            color: #555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            box-shadow: inset 0 1px 1px rgba(0,0,0,.075);
            -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            width: 90px;
        }

        input[type=number] {
            -moz-appearance: textfield;
            width: 80px;
        }

        input::-webkit-outer-spin-button,
        input::-webkit-inner-spin-button {
            -webkit-appearance: none !important;
            margin: 0;
        }
    </style>

    <script src="~/Content/js/hplus/plugins/layer/laydate/laydate.js"></script>
    <script src="~/Content/js/knockout/knockout-3.0.0.js" type="text/javascript"></script>
    <script src="~/Content/js/current/pagination.js" type="text/javascript"></script>
    <script src="~/Content/js/current/Rander.js" type="text/javascript"></script>
    <script src="~/Content/js/current/Checker.js" type="text/javascript"></script>
    <script src="~/Content/js/current/table.js" type="text/javascript"></script>
    <script src="~/ViewModels/MES/IntelligentParameters/INF00019.js" type="text/javascript"></script>

}


