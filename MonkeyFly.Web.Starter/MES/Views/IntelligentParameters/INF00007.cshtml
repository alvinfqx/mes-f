@*客戶資料維護*@
<div id="tb_list" class="J-main">
    <div id="container" class="J-toolbar">
    </div>
    <div class="J-search">
        <input id="CustomerCode"  type="text" class="search-input" placeholder="Customer Code" data-meaning="CustomerCode" style="width: 170px;" autocomplete="off" />
        &nbsp;
        <input id="CustomerName" type="text" class="search-input" placeholder="Customer Name" data-meaning="CustomerName" style="width: 170px;" autocomplete="off" />
    </div>
    <div class="J-content" id="table-body">
        <table id="CustomerTable" data-toggle="true" data-mobile-responsive="true"></table>
    </div>
    <div class="datagrid-pager page" id="paginagionBar"></div>
</div>

@*表格内业务员弹窗列表*@
<div class="modal inmodal" id="ClerkDialog" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" style="width:500px;">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header" style="padding:16px !important">
                <button id="close" type="button" class="close" data-dismiss="modal" onclick="model.clearInput('#ClerkCode')">
                    <span aria-hidden="true">&times;</span><span class="sr-only" data-meaning="Close">Close</span>
                </button>
                <h6 class="modal-title" data-meaning="ClerkInformation">Employee Information</h6>
            </div>
            <div class="J-search">
                <span data-meaning="EmployeeCode" style="margin:5px 5px 8px 10px; width:60px;">Employee Code</span>
                <input id="ClerkCode" type="text" class="search-input" style="width: 160px; margin:5px 5px 8px 0;" autocomplete="off" />
                <button class="btn btn-success btn-sm" type="button" onclick="model.CodeSearch()" id="Find" data-meaning="Search" value="Search">Search</button>
            </div>
            <div id="table-bodyClerk" style="margin:0 15px;">
                <table id="ClerkTable"></table>
            </div>
            <div class="datagrid-pager page" id="paginagionClerkBar" style="margin:0 15px;"></div>
            <div class="modal-footer" style="text-align:right;">               
                <button class="btn btn-success btn-sm" type="button" data-dismiss="modal" id="cancel" onclick="model.clearInput('#ClerkCode')" data-meaning="Cancel" value="Cancel">Cancel</button>
                <button class="btn btn-success btn-sm" type="button" id="commit" data-meaning="Comfirm" onclick="model.clearInput('#ClerkCode')" value="Comfirm">Commit</button>
            </div>
        </div>
    </div>
</div>

