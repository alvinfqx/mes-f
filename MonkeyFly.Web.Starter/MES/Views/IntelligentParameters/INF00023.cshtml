
@{
    ViewBag.Title = "批號自動編號維護";
    Layout = "~/Views/Shared/_LayoutLang.cshtml";
}

@*批號自動編號維護*@
<div id="tb_list" class="J-main">
    <div id="container" class="J-toolbar"></div>
    <div class="J-search">
        <input id="classCode" type="text" class="search-input" placeholder="Category Code" data-meaning="CategoryCode" style="width: 170px;" autocomplete="off" />
    </div>
    <div class="J-content" id="table-body">
        <table id="classTable" data-toggle="true" data-mobile-responsive="true"></table>
    </div>
    <div class="datagrid-pager page" id="paginationBar"></div>
</div>

@*记录按鈕*@
<div class="modal inmodal" id="RecordDialog" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" style="width:800px;">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header" style="padding: 10px 15px!important;">
                <button id="close" type="button" class="close" data-dismiss="modal" onclick="model.clearSearchData();" >
                    <span aria-hidden="true">&times;</span><span class="sr-only" data-meaning="Close" >Close</span>
                </button>
                <h6 class="modal-title" data-meaning="LotRecordFile">Lot record file</h6>
            </div>
            <div class="J-search">
                <input id="class_search_code" type="text" class="search-input" placeholder="Category Code" data-meaning="CategoryCode" style="width: 150px;margin-left:15px;" autocomplete="off" />
                <button class="btn btn-success btn-sm" type="button" onclick="model.CodeSearch()" id="Find" data-meaning="Search" value="Search">Search</button>
            </div>
            <div id="table-bodyData" style="margin:5px 15px;">
                <table id="RecordTable"></table>
            </div>
            <div class="datagrid-pager page" id="paginagionDataBar" style="margin:0 15px;"></div>
            <div id="table-bodyDetailData" style="margin:5px 15px;">
                <table id="RecordDetailTable"></table>
            </div>
            <div class="datagrid-pager page" id="paginagionDataBar_Detail" style="margin:0 15px;"></div>
            <div class="modal-footer" style="text-align:right;padding:5px!important;">
                <button class="btn btn-success btn-sm" type="button" data-dismiss="modal" onclick="model.clearSearchData();" id="cancel" data-meaning="Cancel" value="Cancel">Cancel</button>
                @*<button class="btn btn-success btn-sm" type="button" data-dismiss="modal" id="Commit" data-meaning="Comfirm" value="Comfirm">Commit</button>*@
            </div>
        </div>
    </div>
</div>

@*导入*@
<div class="modal inmodal" id="importDialog" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" style="width:400px;">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header" style="padding:16px !important">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only" data-meaning="Shut">Shut</span>
                </button>
                <h6 id="importTitle" class="modal-title" data-meaning="Import">Import</h6>
            </div>
            <div class="modal-body">
                <div>
                    <div>
                        <button id="btn_browse" class="btn btn-success btn-sm" data-toggle="tooltip" data-placement="left"><span data-meaning="Browse">Browse</span></button>
                        <input id="File" name="File" type="file" style="opacity:0" />
                    </div>
                    <div style="padding:5px;">
                        <span id="FileName" data-meaning="No file selected">No file selected</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal" data-meaning="Close">Close</button>
                <button type="button" class="btn btn-success" id="addFile" data-meaning="Comfirm">Comfirm</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <style>
        #table-body .mf-table-wrapper, #table-bodyDetailData .mf-table-wrapper {
            overflow-x: auto;
        }

        #table-body .fix-table, #table-body .fix-head {
            width: 180%;
        }

        #table-bodyDetailData .fix-table, #table-bodyDetailData .fix-head {
             width: 100%;
        }
    </style>
    <script src="~/Content/js/knockout/knockout-3.0.0.js" type="text/javascript"></script>
    <script src="~/Content/js/current/pagination.js" type="text/javascript"></script>
    <script src="~/Content/js/current/Rander.js" type="text/javascript"></script>
    <script src="~/Content/js/current/Checker.js" type="text/javascript"></script>
    <script src="~/ViewModels/MES/IntelligentParameters/INF00023.js" type="text/javascript"></script>
}
