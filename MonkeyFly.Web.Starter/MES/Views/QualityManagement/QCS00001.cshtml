@{
    ViewBag.Title = "QCS00001";
    Layout = "~/Views/Shared/_LayoutLang.cshtml";
}

@*资源群组*@
<div id="tb_list" class="J-main">
    <div id="container" class="J-toolbar"></div>
    <div class="J-search">
        <span data-meaning="InspectionMethod">Inspection Method</span>
        <select class="search-select" style="width: 100px;" autocomplete="off" data-bind="options: InspectionMethodList, optionsText: 'text', optionsValue: 'value', optionsCaption: '', value: InspectionMethod"></select>
    </div>
    <div class="J-content" id="table-body">
        <table id="QCS00001Table"></table>
    </div>
    <div class="datagrid-pager page" id="paginagionBar"></div>
</div>

@*导入*@
<div class="modal inmodal" id="ImportDialog" tabindex="-1" role="dialog" aria-hidden="true">
    <style>
        .ui-state-highlight, .ui-widget-content .ui-state-highlight, .ui-widget-header .ui-state-highlight {
            border: 1px solid red;
        }
    </style>
    <div class="modal-dialog" style="width:400px;">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header" style="padding:16px !important">
                <span style="font-size:20px" data-meaning="Import">Import</span>
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only" data-meaning="Cancel">Cancel</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <div>
                        <button class="btn btn-success btn-sm" id="BtnBrowse">
                            <span data-meaning="Browse">Browse</span>
                        </button>
                        <input id="BtnFile" type="file" style="opacity:0" />
                    </div>
                    <div style="padding:5px;">
                        <span id="FileName"></span>
                    </div>
                </div>
            </div>
            <div style="text-align:right;padding:5px 10px;">
                <button class="btn btn-success btn-sm" data-dismiss="modal" data-meaning="Cancel">Cancel</button>
                <button class="btn btn-success btn-sm" id="BtnImport" data-meaning="Comfirm">Comfirm</button>
            </div>
        </div>
    </div>
</div>

@*抽验设定*@
<div class="modal inmodal" id="CheckSetDialog" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog" style="width:800px;">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header" style="padding:16px !important">
                <span style="font-size:20px" data-meaning="CheckSet">CheckSet</span>
                <button id="close" type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only" data-meaning="Close">Close</span>
                </button>
            </div>
            <div class="J-search">
                <span style="margin:5px 5px 8px 10px; width:60px;" data-meaning="InspectionLevel">Inspection Level</span>
                <input type="text" class="search-input" style="width: 160px; margin:5px 5px 8px 0;" id="TextInspectionLevel" autocomplete="off" readonly />
                <span style="margin:5px 5px 8px 10px; width:60px;" data-meaning="InspectionMethod">Inspection Method</span>
                <input type="text" class="search-input" style="width: 160px; margin:5px 5px 8px 0;" id="TextInspectionMethod" autocomplete="off" readonly />
                <span style="margin:5px 5px 8px 10px; width:60px;" data-meaning="AQL">AQL</span>
                <input type="text" class="search-input" style="width: 160px; margin:5px 5px 8px 0;" id="TextAQL" autocomplete="off" readonly />
            </div>
            <div id="CheckSetContent" style="margin:0 15px;">
                <table id="CheckTestSettingDetailsTable"></table>
            </div>
            <div class="datagrid-pager page" id="Qcs00001GetDetailsBar" style="margin:0 15px;"></div>
            <div style="text-align:right;padding:5px 10px;">
                <button class="btn btn-success btn-sm" type="button" data-dismiss="modal" data-meaning="Cancel">Cancel</button>
                <button class="btn btn-success btn-sm" type="button" id="CheckSetNewBtn" data-meaning="New">New</button>
                <button class="btn btn-success btn-sm" type="button" id="CheckSetChangeBtn" data-meaning="Change">Change</button>
                <button class="btn btn-success btn-sm" type="button" id="CheckSetDeletionBtn" data-meaning="Deletion">Deletion</button>
                <button class="btn btn-success btn-sm" type="button" id="CheckSetConfirmBtn" data-meaning="Comfirm">Comfirm</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <style>
        .mf-table-wrapper {
            overflow-x: auto;
        }

        #table-body .fix-table, #table-body .fix-head {
            width: 115%;
        }

        #CheckSetContent .fix-table, #CheckSetContent .fix-head {
            width: 180%;
        }
    </style>
    <script src="~/Content/js/knockout/knockout-3.0.0.js" type="text/javascript"></script>
    <script src="~/Content/js/current/pagination.js" type="text/javascript"></script>
    <script src="~/Content/js/current/Rander.js" type="text/javascript"></script>
    <script src="~/Content/js/current/Checker.js" type="text/javascript"></script>
    <script src="~/Content/js/current/FrozenColumn.js" type="text/javascript"></script>
    <script src="~/ViewModels/MES/QualityManagement/QCS00001.js" type="text/javascript"></script>
}

