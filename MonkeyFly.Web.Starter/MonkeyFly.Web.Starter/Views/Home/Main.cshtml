        sessionStorage.clear();
        window.location.href = "/Logon";
    }

    var token = sessionStorage.getItem('token');
    (function Authorize() {
        if (!token) {
            logout();
        }
    })();

    var language = sessionStorage.getItem("language");
    var username = sessionStorage.getItem("username");
