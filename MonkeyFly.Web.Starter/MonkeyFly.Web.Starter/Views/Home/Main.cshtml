    <style>
        body {
            margin: 0;
            font-size: 12px;
        }
        .view-topbar {
            position: fixed;
            width: 100%;
            height: 36px;
            background: #3c8dbc;
        }
        .view-body {
            position: absolute;
            width: 100%;
            top: 36px;
            bottom: 0px;
            background-color: #fff;
        }
        .view-sidebar {
            width: 0px;
            display: none;
            position: fixed;
            top: 36px;
            bottom: 0px;
            background-color: #065f93;
            overflow-x: hidden;
        }
        .view-sidebar-mini {
            width: 50px;
            display: block;
        }
        .view-sidebar-full {
            width: 180px;
            display: block;
        }
        .view-page {
            width: auto;
            position: absolute;
            top: 0px;
            left: 0px;
            bottom: 0px;
            right: 0px;
            background: #fff;
        }
        .view-page-full {
            width: calc(100% - 50px);
            left: 50px;
        }
        .view-page-mini {
            width: calc(100% - 180px);
            left: 180px;
        }
        .view-sidebar .sidebar-fold {
            height: 30px;
            width: 100%;
            background: #4A5064;
            color: #aeb9c2;
            text-align: center;
            line-height: 30px !important;
            cursor: pointer;
        }

        .view-topbar-info {
            color: #fff;
            text-align:right;
            margin:8px 10px;
        }
            .view-topbar-info span {
                margin-right: 16px;
            }
            .view-topbar-info .view-topbar-btn {
                cursor: pointer;
            }

        .view-page-content {
            display:block;
            height: calc(100% - 26px);
        }
        .view-page-footer {
            border-top: 1px solid #e7eaec;
            padding: 4px 5px 3px;
            color: #676a6c;
        }
    </style>
</head>
